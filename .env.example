# Server Configuration
NODE_ENV=development
PORT=3006
HOST=0.0.0.0
LOG_LEVEL=info

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# AI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
AI_MODEL_PRIMARY=gpt-4-turbo-preview
AI_MODEL_FALLBACK=claude-3-sonnet-20240229
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# Brain GraphRAG Integration
BRAIN_API_URL=http://nexus-graphrag:9001
BRAIN_API_KEY=your-brain-api-key

# Property Management Service
PROPERTY_MANAGEMENT_URL=http://nexus-property-management:3001

# Communication Service
COMMUNICATION_SERVICE_URL=http://nexus-communication:3005

# Redis Configuration
REDIS_HOST=nexus-redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=4

# RabbitMQ Configuration
RABBITMQ_URL=amqp://nexus-rabbitmq:5672
RABBITMQ_EXCHANGE=nexus-events
RABBITMQ_QUEUE=guest-experience-events

# ============================================================================
# Third-Party Integration APIs
# ============================================================================

# Uber Rides API Configuration
# Documentation: https://developer.uber.com/docs/riders/ride-requests/introduction
# Required for: Guest transportation upsell feature
UBER_API_KEY=your-uber-server-token
UBER_API_SECRET=your-uber-api-secret
UBER_CLIENT_ID=your-uber-client-id
UBER_SANDBOX_MODE=true

# DoorDash Drive API Configuration
# Documentation: https://developer.doordash.com/
# Required for: Food delivery upsell feature
# Note: DoorDash uses JWT authentication with developer ID, key ID, and signing secret
DOORDASH_DEVELOPER_ID=your-doordash-developer-id
DOORDASH_KEY_ID=your-doordash-key-id
DOORDASH_SIGNING_SECRET=your-doordash-signing-secret
DOORDASH_SANDBOX_MODE=true

# Instacart Platform API Configuration
# Documentation: https://www.instacart.com/help/section/360007902831
# Required for: Grocery delivery upsell feature
# Note: Instacart Enterprise API access is typically limited to enterprise partners
INSTACART_API_KEY=your-instacart-api-key
INSTACART_PARTNER_ID=your-instacart-partner-id
INSTACART_SANDBOX_MODE=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Service Request Configuration
SLA_LOW_MINUTES=1440
SLA_NORMAL_MINUTES=240
SLA_HIGH_MINUTES=60
SLA_URGENT_MINUTES=15

# Sentiment Analysis
SENTIMENT_THRESHOLD_NEGATIVE=-0.5
SENTIMENT_THRESHOLD_POSITIVE=0.5
